{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",
    "types": ["vitest/globals", "node"],
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "baseUrl": "./src",
    "paths": {
      "~/components/*": ["./components/*"],
      "~/constants/*": ["./constants/*"],
      "~/layouts/*": ["./layouts/*"],
      "~/pages/*": ["./pages/*"],
      "~/stores/*": ["./stores/*"],
      "~/types/*": ["./types/*"],
      "~/utils/*": ["./utils/*"]
    }
  },
  "references": [{ "path": "./tsconfig.node.json" }],
  "include": ["src", "setup-vitest.ts", "__tests__", "__mocks__"]
}
